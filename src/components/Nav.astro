<style>
    nav {
        z-index: 1000;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        background-color: #f5f5f5ee;
        box-shadow: 0 0 1rem #0002;
        backdrop-filter: blur(2px);
        padding: 0 0.75rem;
        border-top: 5px solid rgb(var(--background-color));
    }

    
    .nav-menu {
        display: flex;
		list-style: none;
		padding: 0;
        margin: 0;
	}

	.nav-link {
		font-weight: 600;
		font-size: 0.8rem;
		text-align: center;
		color: inherit;
		text-decoration: none;
		display: block;
		transition: background-color 0.2s ease-in-out;
        text-transform: uppercase;
        position: relative;
        
       
            padding: 1.25rem 1rem;
        &::after {
            content: '';
            display: block;
            width: calc(100% - 2rem);
            height: 2px;
            margin-top: 1px;
            background: rgb(var(--accent));
            transition: transform 0.3s;
            position: absolute;
            transform: scaleX(0);
        }
        
		&:focus {
            outline: 1px solid rgb(var(--text-color));
			outline-offset: 2px;
		}
        
		&:hover::after {
            transform: scaleX(1);
			
            
		}

        .title {
            font-size: 1.2rem !important;
        }

	}
</style>