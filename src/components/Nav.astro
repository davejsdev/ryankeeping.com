---
import Card from "./Card.astro";


---
<nav>
    <ul class="nav-menu">
        <li>
            <a href="/" class="nav-link">
                <Card>
                    Home
                </Card>
            </a>
        </li>
        <li>
            <a href="/about" class="nav-link">
                <Card>

                    About
                </Card>
            </a>
        </li>
        <li>
            <a href="/route" class="nav-link">
                <Card>

                    Route
                </Card>
            </a>
        </li>
</nav>

<style>
    .nav-menu {
		list-style: none;
		padding: 0;
		display: flex;
		gap: 1rem;
        margin: auto;
        color: white;
	}

	.nav-link {
		font-weight: 600;
		font-size: 0.8rem;
		text-align: center;
		color: inherit;
		text-decoration: none;
		display: block;
		padding: 0.25em;
		transition: background-color 0.2s ease-in-out;
        text-transform: uppercase;
        
        .card {
            padding: 0.5em 1em;
            all: unset;
        }

		.card:focus {
			outline: 1px solid rgb(var(--text-color));
			outline-offset: 2px;
		}

		.card:hover {
			text-decoration: underline;
		}

	}
</style>