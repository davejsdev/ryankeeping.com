---
import { fade, ViewTransitions } from 'astro:transitions'

import { SITE_NAME, DESCRIPTION } from '../../src/config'

interface Props {
	title: string;
}

// @ts-ignore - TODO figure otu type safety on this
const { frontmatter } = Astro.props

const isHome = Astro.url.pathname === '/'

const pageTitle = [
	frontmatter.title ? frontmatter.title : undefined,
	isHome ? SITE_NAME : undefined,
].filter(Boolean).join(' | ')

const links	= frontmatter.content.links as { title: string; url: string }[]
---

<!doctype html>
<html 
	lang="en"
	transition:animate={fade({ duration: '1s' })}
>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ DESCRIPTION } />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ pageTitle }</title>

		<ViewTransitions />
	</head>
	<body>
		<div class="container">
			<main>
				<slot />
				{links && (
					<ul class="link-list">
						{links.map((link) => (
							<li class="link-item">
								<a class="link" href={link.url} target="_blank" rel="noopener noreferrer">{link.title}</a>
							</li>
						))}
					</ul>
				)}
			</main>

			<footer>
				<p>&copy; {new Date().getFullYear()} {SITE_NAME}</p>
			</footer>
		</div>
	</body>
</html>
<style is:global>
	:root {
		--text-color: 255, 255, 255;
		--background-color: 25, 25, 30;
		--accent: 146, 8, 14;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html, body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		color: rgb(var(--text-color));
		background: rgb(var(--background-color));
		margin: 0;
		box-sizing: border-box;

		background-image: url('/ryan-keeping-background.jpeg');
		background-blend-mode: overlay;
		background-size: cover;
		background-position: top center;
	}

	*, *:before, *:after {
		box-sizing: inherit;
	}

	/* Light mode */
	@media (prefers-color-scheme: light) {
		:root {
			--text-color: 0, 0, 0;
			--background-color: 225, 225, 225;
		}
	}

	.container {
		display: grid;
		min-height: 100vh;
		max-width: 600px;
		margin: auto;
		padding: 2rem 1rem;
		gap: 1rem;
		grid-template-rows: 1fr auto;
	}

	main {
		display: grid;
		padding-top: max(4rem, 10vw);
		gap: 1rem;
		align-items: start;
		align-content: center;
		text-align: center;
	}

	footer {
		text-align: center;
		color: rgba(var(--text-color), 0.75);
		font-size: 0.8rem;
	}

	h1, h2 {
		text-align: center;
		margin: 0;
	}

	h2 {
		font-style: italic;
		font-size: 1.25rem;
	}

	.link-list {
		list-style: none;
		padding: 0;
		display: grid;
		gap: 1rem;
	}

	.link {
		font-weight: 600;
		font-size: 1.2rem;
		text-align: center;
		color: #fff;
		text-decoration: none;
		display: block;
		background-color: rgba(var(--accent), 0.9);
		padding: 1em 2em;
		transition: background-color 0.2s ease-in-out;
		&:focus {
			outline: 1px solid rgb(var(--text-color));
			outline-offset: 2px;
		}

		&:hover {
			background-color: rgba(var(--accent), 1);
		}

	}
	
</style>
